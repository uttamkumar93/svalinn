{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://svalinn.dev/schemas/container-info.v1.json",
  "title": "Container Information",
  "description": "Output schema for 'vordr ps --json' and 'vordr inspect --json'",
  "type": "object",
  "required": ["id", "name", "image_id", "state", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique container identifier (64 hex chars)",
      "pattern": "^[a-f0-9]{64}$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable container name"
    },
    "image_id": {
      "type": "string",
      "description": "Image reference or digest"
    },
    "state": {
      "type": "string",
      "enum": ["created", "running", "paused", "stopped"],
      "description": "Current container state"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "started_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 start timestamp (null if never started)"
    },
    "finished_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 stop timestamp (null if still running)"
    },
    "exit_code": {
      "type": ["integer", "null"],
      "description": "Process exit code (null if still running)"
    },
    "pid": {
      "type": ["integer", "null"],
      "description": "Main process PID (null if not running)"
    },
    "ports": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PortMapping"
      }
    },
    "mounts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Mount"
      }
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Attached network names"
    },
    "labels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "security_profile": {
      "type": "string",
      "description": "Applied security profile name"
    }
  },
  "definitions": {
    "PortMapping": {
      "type": "object",
      "required": ["host_port", "container_port", "protocol"],
      "properties": {
        "host_ip": {
          "type": "string",
          "default": "0.0.0.0"
        },
        "host_port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "container_port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "protocol": {
          "type": "string",
          "enum": ["tcp", "udp"],
          "default": "tcp"
        }
      }
    },
    "Mount": {
      "type": "object",
      "required": ["type", "source", "destination"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["bind", "volume", "tmpfs"]
        },
        "source": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "read_only": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
